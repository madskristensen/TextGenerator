<Window x:Class="MadsKristensen.TextGenerator.GeneratorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Generate text" Height="120" Width="291" ShowInTaskbar="False" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <TextBox x:Name="txLength" Grid.Column="0" Grid.Row="0" Margin="10 10 5 10" HorizontalAlignment="Left" Height="20" TextWrapping="Wrap" VerticalAlignment="Center" Width="30" SelectionOpacity="0.3" TextAlignment="Right"/>
        <Label x:Name="lblLength" Grid.Column="1" Grid.Row="0" Content="words of" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <ComboBox x:Name="cbType" Grid.Column="2" Grid.Row="0" Margin="5 10 10 10" VerticalAlignment="Center" Width="auto"/>

        <Button x:Name="btnOk" Grid.Column="2" Grid.Row="1" Content="Insert" HorizontalAlignment="Right" Margin="10" VerticalAlignment="Bottom" Width="75" IsDefault="True" Click="btnOk_Click" RenderTransformOrigin="0.495,0.489"/>
    </Grid>
</Window>
